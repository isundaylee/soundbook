<%- model_class = Song -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<div class="media">
  <img class="pull-left media-object" src="<%= @song.album.cover.url(:thumb) %>">
  <div class="media-body">
    <h4 class="media-heading"><%= @song.album.title %> - <%= @song.title %></h4>
    <a href="<%= @song.song.url %>">文件</a>
  </div>
</div>

<%= link_to t('.back', :default => t("helpers.links.back")),
              songs_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_song_path(@song), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              song_path(@song),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>

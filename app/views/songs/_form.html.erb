<%= form_for @song, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="form-group">
    <%= f.label :title, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :title, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :album_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.collection_select :album_id, Album.all, :id, :title, {}, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :description, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :description, :rows => 10, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :song, :class => 'control-label' %>
    <div class="controls">
      <span class="btn btn-default btn-file">
        <%= t('helpers.links.browse') %><%= f.file_field :song %>
      </span>
    </div>
  </div>


  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            songs_path, :class => 'btn btn-default' %>

<% end %>
